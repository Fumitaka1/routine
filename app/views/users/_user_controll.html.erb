<div class="controll_table land">
  <table>
    <tr>
      <th></th>
      <th>ID</th>
      <th>ユーザーネーム</th>
      <th>メールアドレス</th>
      <th>登録日</th>
      <th>投稿数</th>
      <th>フォロワー</th>
      <th>フォロー</th>
      <th>　　　</th>
    </tr>
    <% users.each do |user| %>
      <% next if user.admin? %>
      <tr>
        <td><%= render('shared/user_icon', user: user) %></td>
        <td><%= user.id %></td>
        <td><%= link_to(user.name, user_path(user)) %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_s(:datetime_jp) %></td>
        <td><%= user.posts.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= user.following.count %></td>
        <td><%= link_to('削除', user,
          data: { confirm: '本当に削除しますか？' },
          method: :delete,
          class: 'button',
          remote: true) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
