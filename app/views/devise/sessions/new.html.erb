<div class="wrapper top">
  <div class="devise_form_outer land">
    <%= form_with(model: @user, url: new_user_session_path, local: true, class: 'basic_form') do |f| %>
      <h2>ログイン</h2>

      <%= f.label(:email, "メールアドレス") %>
      <%= f.email_field(:email, autofocus: true, autocomplete: "email") %>

      <%= f.label(:password, "パスワード") %>
      <%= f.password_field(:password, autocomplete: "current-password") %>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box(:remember_me) %>
          <%= f.label(:remember_me, "ログイン状態を維持する") %>
        </div>
      <% end %>

      <%= f.submit("ログイン", class: "button") %>
    <% end %>

    <%= form_with(model: @user, url: new_user_session_path, local: true, class: 'devise_form_menu') do |f| %>
      <%= f.hidden_field(:email, :value => 'sample@example.com') %>
      <%= f.hidden_field(:password, :value => 'sample-password') %>
      <%= f.submit("簡単ログイン", class: "button easy_login_button") %>
    <% end %>

    <div class="devise_form_menu">
      <%= render("devise/shared/links") %>
    </div>
  </div>
</div>
