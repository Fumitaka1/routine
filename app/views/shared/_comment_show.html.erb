<div class="comment">
  <div class="comments_info">
    <div class="comments_user_icon">
      <%= link_to(user_path(comment.user)) do %>
        <%= render('shared/user_icon', user: comment.user) %>
      <% end %>
    </div>

    <div class="comment_meta">
      <div class="comment_inner">
        <div class="posts_meta">
          <p class="posted_user_name"><%= link_to(comment.user.name, user_path(comment.user)) %></p>
          <p class="updated_time"><%= comment.updated_at.to_s(:datetime_jp) %>更新</p>
        </div>
        <%= render('shared/comment_menu', comment: comment) %>
      </div>
    </div>
  </div>
  <p class="comment_content"><%= comment.content %></p>
</div>
