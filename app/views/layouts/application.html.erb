<!DOCTYPE html>
<html>
  <head>
    <title>Routine</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'shared/header' %>
    <div class="flash_message_container">
      <%= render 'shared/notice_message', notice: notice if notice.present? %>
      <%= render 'shared/alert_message', alert: alert if alert.present? %>
      <%= render 'shared/alert_message', alert: '管理者権限でログインしています' if current_user_is_admin? %>
    </div>
    <div class="main">
      <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
