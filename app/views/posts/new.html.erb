<div class="form-outer wrapper">
  <div class="form-inner">
    <%= form_with model: @post, class: "basic_form" do |f| %>
      <h2>新規投稿</h2>
      
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title %>
      
      <%= f.label :contents, "内容" %>
      <%= f.text_area :contents %>
      
      <%= f.file_field :image%>
      <%= f.submit "新規登録", class: "button" %>
    <% end %>
  </div>
</div>